@using AspFinalProject.Models.ViewModels;
@model ProductViewModel

<a asp-controller="products" asp-action="details" asp-route-id="@Model.Id" class="product">
    <div class="collection-item">
        <img src="images/placeholders/@Model.Image" alt="@Model.Name" />
        <div class="product-text">
            <h3>@Model.Name</h3>
            <span>$@Model.Price.ToString()!.Remove(Model.Price.ToString()!.Length - 2) </span>
        </div>
    </div>
</a>
