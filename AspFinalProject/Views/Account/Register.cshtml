@model AccountRegisterViewModel

@{
    ViewData["Title"] = "Register a new account";
}

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-center">

        <form method="post" asp-action="Register" class="col-10 col-xl-6">

            <div asp-validation-summary="ModelOnly"></div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <small class="text-danger"><span asp-validation-for="FirstName"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <small class="text-danger"><span asp-validation-for="LastName"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <small class="text-danger"><span asp-validation-for="Email"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <small class="text-danger"><span asp-validation-for="Password"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="PasswordConfirmed" class="form-label"></label>
                <input asp-for="PasswordConfirmed" class="form-control" />
                <small class="text-danger"><span asp-validation-for="PasswordConfirmed"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <small class="text-danger"><span asp-validation-for="PhoneNumber"></span></small>
            </div>
            <div class="mt-5">
                <div class="d-grid">
                    <button type="submit" class="btn btn-success">Register</button>
                </div>
            </div>
        </form>

    </div>
</div>